<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CodeHero" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="layoutScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layoutItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/list_item_padding</item>
    </style>

    <style name="textViewHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/marvel_red</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:layout_marginTop">@dimen/margin_screen</item>
    </style>

    <style name="textViewDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/list_font_size</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="list">
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@color/marvel_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="roundButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>

    <style name="whiteButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/marvel_red</item>
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="android:textColor">@color/marvel_red</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_screen</item>
    </style>

    <style name="redButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="backgroundTint">@color/color_states_red</item>
        <item name="iconTint">@color/marvel_red</item>
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="android:textColor">@color/marvel_red</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_screen</item>
    </style>

    <style name="redButtonOutline" parent="redButton">
        <item name="strokeColor">@color/marvel_red</item>
    </style>

    <style name="redButtonOutlineSelected" parent="redButtonOutline">
        <item name="backgroundTint">@color/marvel_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="imageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_screen</item>
    </style>
</resources>